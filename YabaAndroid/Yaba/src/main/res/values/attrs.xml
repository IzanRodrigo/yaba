<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WTextView">
        <attr name="font" format="string" />
        <attr name="animateTouch" format="boolean" />
        <attr name="gradient" format="boolean" />
        <attr name="caps" format="enum">
            <enum name="none" value="0x0" />
            <enum name="characters" value="0x1" />
            <enum name="sentences" value="0x2" />
            <enum name="words" value="0x3" />
        </attr>
        <attr name="gradientOrientation" format="enum">
            <enum name="horizontal" value="0x0" />
            <enum name="vertical" value="0x1" />
        </attr>
        <attr name="gradientStart" format="color" />
        <attr name="gradientEnd" format="color" />
        <attr name="scaleText" format="boolean" />
        <attr name="maxLines" format="integer" />
        <attr name="minTextSize" format="float" />
        <attr name="rotationAngle" format="float" />
    </declare-styleable>

    <declare-styleable name="WImageView">
        <attr name="tintTouch" format="boolean" />
        <attr name="tintColor" format="color" />
    </declare-styleable>
</resources>